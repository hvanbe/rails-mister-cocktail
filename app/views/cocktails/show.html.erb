<div class="container_cocktail col-12">
  <div class="card text-center" style="width: 30%;">
    <div class="card-body">
      <%= image_tag @cocktail.url, width: 400, height: 300, crop: :fill %>
      <h5 class="card-title text-uppercase py-3"><%= @cocktail.name %></h5>
      <p class="card-text">
        <ul class="text-decoration-none">
          <% @cocktail.doses.each do |dose| %>
            <li class="font-italic text-decoration-none"><%= dose.ingredient.name %> (<%= dose.description %>)</li>
          <%= link_to "Delete", dose_path(dose), class: "btn btn-danger btn-xs", method: :delete  %>
          <% end %>
        </ul>
      </p>
    </div>
  </div>

  <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-primary", id: "ingredient-add-button"%>
  <%= link_to "Go back", cocktails_path, class: "btn btn-warning btn-sm" %>
</div>
